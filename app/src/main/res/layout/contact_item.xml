<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/contactLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.9">

        <ImageView
            android:layout_width="@dimen/size_medium_56"
            android:layout_height="@dimen/size_medium_56"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:src="@drawable/ic_baseline_people_24" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:text="Eganin"
            android:textSize="@dimen/size_middle_30" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_background" />
    </LinearLayout>


</LinearLayout>